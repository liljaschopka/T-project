<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" stylesheets="@stylesheets/lists.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tproject.FlightsView">
   <Label prefHeight="40.0" prefWidth="230.0" text="Select departure flight:" textAlignment="CENTER">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </Label>
      <ListView fx:id="fxDepartureList" prefHeight="181.0" prefWidth="297.0" VBox.vgrow="ALWAYS" />
   <Label prefHeight="40.0" prefWidth="230.0" text="Select return flight:" textAlignment="CENTER">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin>
   </Label>
      <ListView fx:id="fxArrivalList" prefHeight="200" prefWidth="300" VBox.vgrow="ALWAYS" />
    <Label fx:id="fxFlightDescription" maxWidth="300" text="Select a flight to see details" wrapText="true">
        <VBox.margin>
            <Insets bottom="10" left="10" right="10" top="10" />
        </VBox.margin>
    </Label>
    <Button fx:id="fxAddToCart" onAction="#fxAddToCartHandler" text="Add to Cart">
        <VBox.margin>
            <Insets bottom="10" left="10" right="10" />
        </VBox.margin>
    </Button>
    <Button fx:id="fxGoBack" onAction="#fxGoBackHandler" text="Go Back">
        <VBox.margin>
            <Insets bottom="10" left="10" right="10" />
        </VBox.margin>
    </Button>
</VBox>
